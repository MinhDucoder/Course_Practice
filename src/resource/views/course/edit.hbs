<div class="container">
    <div class="card shadow-sm">
      <div class="card-header">
        <h5 class="mb-0">Chỉnh sửa khóa học: {{course.title}}</h5>
      </div>
      <div class="card-body">
        <form action="/course/{{course._id}}/edit?_method=PUT" method="POST">
          {{!-- Bạn có thể thêm CSRF token ở đây nếu cần --}}
          
          <div class="mb-3">
            <label for="title" class="form-label">Tiêu đề khóa học</label>
            <input
              type="text"
              id="title"
              name="title"
              class="form-control"
              value="{{course.title}}"
              required
            >
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Mô tả ngắn</label>
            <textarea
              id="description"
              name="description"
              class="form-control"
              rows="3"
            >{{course.description}}</textarea>
          </div>

          <div class="row">
            <div class="col-md-4 mb-3">
              <label for="level" class="form-label">Trình độ</label>
              <select id="level" name="level" class="form-select" required>
                <option value="beginner" {{#if (eq course.level "beginner")}}selected{{/if}}>Beginner</option>
                <option value="intermediate" {{#if (eq course.level "intermediate")}}selected{{/if}}>Intermediate</option>
                <option value="advanced" {{#if (eq course.level "advanced")}}selected{{/if}}>Advanced</option>
              </select>
            </div>
            <div class="col-md-4 mb-3">
              <label for="durationHours" class="form-label">Thời lượng (giờ)</label>
              <input
                type="number"
                id="durationHours"
                name="durationHours"
                class="form-control"
                value="{{course.durationHours}}"
                min="0"
                step="0.5"
              >
            </div>
            <div class="col-md-4 mb-3">
              <label for="price" class="form-label">Giá (USD)</label>
              <input
                type="number"
                id="price"
                name="price"
                class="form-control"
                value="{{course.price}}"
                min="0"
                step="0.01"
              >
            </div>
          </div>

          <div class="mb-3">
            <label for="instructorName" class="form-label">Instructor</label>
            <input
              type="text"
              id="instructorName"
              name="instructor.name"
              class="form-control"
              value="{{course.instructor.name}}"
            >
          </div>

          <div class="mb-3">
            <label for="category" class="form-label">Danh mục</label>
            <input
              type="text"
              id="category"
              name="category"
              class="form-control"
              value="{{course.category}}"
            >
          </div>

          <div class="mb-3">
            <label for="tags" class="form-label">Tags (phân tách bằng dấu phẩy)</label>
            <input
              type="text"
              id="tags"
              name="tags"
              class="form-control"
              value="{{course.tags.[0]}}{{#each course.tags}},{{this}}{{/each}}"
              placeholder="js,node,mongo"
            >
          </div>

          <div class="d-flex justify-content-end">
            <a href="/me/store-course" class="btn btn-outline-secondary me-2">Hủy</a>
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  