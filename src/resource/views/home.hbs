

<h1 class="mb-4">All Courses</h1>

<div class="row g-4">
  {{#each courses}}
    <div class="col-sm-6 col-md-4 col-lg-3">
      <div class="card h-100 shadow-sm">
        <a href="/course/{{this.slug}}">
          <img src="/img/html.jpg" 
               class="card-img-top" 
               alt="{{this.title}}">
        </a>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title text-truncate">
            <a href="/course/{{this.slug}}">{{this.title}}</a>
          </h5>
          <p class="card-text text-muted small flex-grow-1">
            {{this.description}}
          </p>
          <div class="mt-3">
            <span class="badge bg-info text-dark">{{this.category}}</span>
            <span class="badge bg-secondary">{{this.level}}</span>
          </div>
          <a href="/course/{{this.slug}}" class="btn btn-primary mt-3 w-100">
            Buy Now
          </a>
        </div>
        <div class="card-footer text-end">
          <small class="text-muted">
            {{this.durationHours}}h | {{this.studentsEnrolled}} enrolled
          </small>
        </div>
      </div>
    </div>
  {{/each}}
</div>

